<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.GroupActivity"
    android:weightSum="1"
    android:id="@+id/ga_layout"
    android:clickable="true"
    android:background="@drawable/background_group"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/ga_layout_inner"

        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="245dp"
            android:layout_height="120dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select Group"
            android:textSize="60dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="50dp"
            android:id="@+id/ga_select_button"
            android:background="@null"
            android:textStyle="bold"
            android:fontFamily="Helvetica"
            android:layout_weight="0.35"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="245dp"
            android:layout_height="120dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Group"
            android:textSize="60dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:id="@+id/ga_new_button"
            android:background="@null"
            android:layout_weight="0.35"
            android:textStyle="bold"
            android:fontFamily="Helvetica"
            />

    </LinearLayout>
</LinearLayout><!-- From: file:/Users/Andersson/Google%20Drive/Andriod_saved_files/Parse-Starter-Project-1.9.1/ParseStarterProject/res/layout/activity_group.xml -->