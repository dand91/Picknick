<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.SelectGroupActivity"
    android:weightSum="1"
    android:background="@drawable/background_group"
    android:id="@+id/sga_layout"
     >

    <ScrollView android:id="@+id/sga_form" android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_weight="0.98"
        android:fillViewport="false">

        <LinearLayout android:id="@+id/sga_layout_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sga_display"
                android:layout_gravity="center"
                android:text="Select group"
                android:textSize="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColorHint="#110F10"
                android:fontFamily="Helvetica"
                android:textColor="#ffffffff"
                android:singleLine="false" />

            <EditText

                android:background="#ffffffff"

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:hint=" group name"
                android:textColorHint="#110F10"
                android:ems="10"
                android:id="@+id/sga_text"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ff010101" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/sga_response"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ff000000"
                    />

            <Button
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="30dp"
                android:text="next"
                android:id="@+id/sga_next_button"
                android:background="#991171e9"
                android:clickable="true"
                android:enabled="true"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

