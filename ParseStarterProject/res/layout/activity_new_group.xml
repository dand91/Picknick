<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.NewGroupActivity"
    android:weightSum="1"
    android:background="@drawable/background_group"

    android:id="@+id/nga_layout">



    <ScrollView android:id="@+id/nga_form" android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_weight="0.98"
        >

        <LinearLayout android:id="@+id/nga_layout_inner" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:weightSum="1"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nga_display"
                android:layout_gravity="center"
                android:text="Create new group"
                android:textSize="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="Helvetica"
                android:textColor="#ffffffff"
                android:singleLine="false" />

            <EditText

                android:background="#ffffffff"

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:hint=" group name"
                android:textColorHint="#110F10"
                android:ems="10"
                android:id="@+id/nga_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ff000000"/>

            <EditText
                android:background="#ffffffff"

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:hint=" note"
                android:textColorHint="#110F10"
                android:ems="10"
                android:id="@+id/nga_note"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ff000000"
                android:layout_weight="0.60" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nga_response"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ffffffff"
                />

            <Button android:id="@+id/nga_next_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="next"
                android:textSize="24dp"

                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="80dp"
                android:background="#991171e9"
                android:textColor="#ffffffff"
                android:clickable="true"
                android:enabled="true"
                android:layout_gravity="center" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>

